<%# 청원글 작성 페이지 %>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>청원하기</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">숭실대학교 학생 청원 사이트</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/main">홈</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <h2 class="text-center mb-4">청원 작성</h2>
      <form id="petition-form" action="/petitions/create" method="post">
        <div class="mb-3">
          <label for="petitionTitle" class="form-label">청원 제목</label>
          <input type="text" class="form-control" id="petitionTitle" name="title" placeholder="청원 제목을 입력하세요" required>
        </div>
        <div class="mb-3">
          <label for="petitionContent" class="form-label">청원 내용</label>
          <textarea class="form-control" id="petitionContent" name="content" rows="3" placeholder="청원 내용을 입력하세요" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">청원 추가</button>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/script.js"></script>
  </body>
</html>
